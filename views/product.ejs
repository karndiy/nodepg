<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Real-Time Product List</title>
</head>
<body>
    <h1>Product List</h1>
    <ul id="product-list"></ul>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();  // Connect to WebSocket server

        // Request the initial list of products when the page loads
        socket.emit('requestProducts');

        // Listen for the 'productsList' event to display products
        socket.on('productsList', (products) => {
            const productList = document.getElementById('product-list');
            productList.innerHTML = '';  // Clear existing products

            // Loop through each product and add it to the list
            products.forEach((product) => {
                const newItem = document.createElement('li');
                newItem.textContent = `${product.name} - ${product.price}`;
                productList.appendChild(newItem);
            });
        });

        // Listen for the 'newProduct' event to handle new products in real-time
        socket.on('newProduct', (newProducts) => {
            const productList = document.getElementById('product-list');

            // Add each new product to the list
            newProducts.forEach((product) => {
                const newItem = document.createElement('li');
                newItem.textContent = `${product.name} - ${product.price}`;
                productList.appendChild(newItem);
            });
        });
    </script>
</body>
</html>
